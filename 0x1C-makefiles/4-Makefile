#variables
CC = gcc
SRC = main.c school.c
OBJ = $(SRC:.c=.o)
NAME = school
RM = rm
CFLAGS = -Wall -Werror -Wextra -pedantic

.PHONY: all clean oclean fclean re

#Creates the executable file (school)
all: $(OBJ)
	$(CC) $(CFLAGS) $(OBJ) -o $(NAME)

clean:
	$(RM) *~ $(NAME)

oclean:
	$(RM) *.o

fclean: clean oclean

re: fclean $(NAME)
